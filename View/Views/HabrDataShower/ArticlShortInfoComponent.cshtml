@using Model.Types
@model ArticleShortInfo

<div style="display:flex; flex-wrap:wrap; flex-direction:column">
    <h2>@Model.Title</h2>
    <div>
        @for (int i = 0; i < Model.Tags.Count; i++)
        {
                <div>
                    @Model.Tags[i]
                </div>   
        }
    </div>
    <h3>@Model.Rating</h3>
    <h3>@Model.CommentaryCount</h3>
</div>